files:
  "/etc/httpd/conf.d/vhost-redemption.conf":
    mode: "000644"
    owner: ec2-user
    group: ec2-user
    content: |
      #NameVirtualHost *:80
      #NameVirtualHost *:443

      #----------------
      # production vhost
      #----------------

      <VirtualHost *:80>
        DocumentRoot /var/app/current/web/
        ServerName redemption.ebizu.com
        <Directory "/var/app/current/web/">
          AllowOverride All
          Order allow,deny
          Allow from all
          Options +Indexes
          Require all granted
        </Directory>
      </VirtualHost>

      #----------------
      # staging vhost
      #----------------

      <VirtualHost *:80>
        DocumentRoot /var/app/current/web/
        ServerName redemptionstaging.ebizu.com
        <Directory "/var/app/current/web/">
          AllowOverride All
          Order allow,deny
          Allow from all
          Options +Indexes
          Require all granted
        </Directory>
      </VirtualHost>
