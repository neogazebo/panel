commands:
  01_update_composer:
    command: /usr/bin/composer.phar self-update

container_commands:
   01optimize_composer:
      command: "/usr/bin/composer.phar dump-autoload --optimize"
   02install_composer_asset:
      command: "/usr/bin/composer.phar global require fxp/composer-asset-plugin:~1.1.3"
   03composer_install:
      command: "/usr/bin/composer.phar install"
